<script>
// Language switcher
function switchLanguage(lang) {
    const body = document.body;
    const langBtns = document.querySelectorAll('.lang-btn');
    const langContents = document.querySelectorAll('.lang-content');
    
    // Update HTML lang attribute
    document.documentElement.lang = lang === 'ar' ? 'ar' : 'en-GB';
    
    // Toggle RTL
    if (lang === 'ar') {
        body.classList.add('rtl');
    } else {
        body.classList.remove('rtl');
    }
    
    // Update active states
    langBtns.forEach(btn => {
        if (btn.dataset.lang === lang) {
            btn.classList.add('active');
        } else {
            btn.classList.remove('active');
        }
    });
    
    // Show/hide content
    langContents.forEach(content => {
        if (content.dataset.lang === lang) {
            content.classList.add('active');
        } else {
            content.classList.remove('active');
        }
    });
    
    // Track language change
    if (typeof gtag !== 'undefined') {
        gtag('event', 'language_change', {
            'event_category': 'engagement',
            'event_label': lang,
            'page_type': 'vc_landing'
        });
    }
}

// Product selection functionality (both languages)
function initProductSelection(lang) {
    const suffix = lang === 'ar' ? '-ar' : '-en';
    const productCheckboxes = document.querySelectorAll(`#product-portfolio${suffix}, #product-dd${suffix}, #product-counsel${suffix}, #product-moat${suffix}, #product-compliance${suffix}`);
    const selectionSummary = document.getElementById(`selectionSummary${suffix}`);
    const selectedList = document.getElementById(`selectedList${suffix}`);
    const bookCallBtn = document.getElementById(`bookCallBtn${suffix}`);
    
    let selectedServices = [];
    
    productCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function() {
            updateSelection();
            
            // Track product selections
            if (typeof gtag !== 'undefined') {
                gtag('event', 'product_selection', {
                    'event_category': 'engagement',
                    'event_label': this.parentElement.dataset.service,
                    'value': this.checked ? 1 : 0,
                    'language': lang
                });
            }
        });
    });
    
    function updateSelection() {
        selectedServices = [];
        const selectedOptions = document.querySelectorAll(`.product-checkbox:checked`);
        
        // Filter for current language
        const currentLangOptions = Array.from(selectedOptions).filter(opt => 
            opt.id.endsWith(suffix)
        );
        
        if (currentLangOptions.length === 0) {
            selectionSummary.style.display = 'none';
            return;
        }
        
        selectionSummary.style.display = 'block';
        selectedList.innerHTML = '';
        
        currentLangOptions.forEach(option => {
            const label = option.nextElementSibling;
            const serviceName = label.querySelector('h3').textContent;
            const serviceData = option.parentElement.dataset.service;
            const calendlyUrl = option.parentElement.dataset.calendly;
            
            selectedServices.push({
                name: serviceName,
                service: serviceData,
                calendlyUrl: calendlyUrl
            });
            
            const li = document.createElement('li');
            li.textContent = serviceName;
            selectedList.appendChild(li);
        });
    }
    
    if (bookCallBtn) {
        bookCallBtn.addEventListener('click', function() {
            // Track booking click
            if (typeof gtag !== 'undefined') {
                gtag('event', 'calendly_click', {
                    'event_category': 'conversion',
                    'event_label': 'book_call_vc',
                    'services_count': selectedServices.length,
                    'language': lang
                });
            }
            
            routeToCalendly();
        });
    }
    
    function routeToCalendly() {
        if (selectedServices.length === 1) {
            window.open(selectedServices[0].calendlyUrl, '_blank');
        } else {
            const generalUrl = 'https://calendly.com/henry-platten/portfolio-review';
            const serviceNames = selectedServices.map(s => s.name).join(', ');
            window.open(`${generalUrl}?a1=${encodeURIComponent(serviceNames)}`, '_blank');
        }
    }
}

// Initialize for both languages
initProductSelection('en');
initProductSelection('ar');

// CTA click tracking
document.querySelectorAll('.cta-primary, .btn-book-call').forEach(button => {
    button.addEventListener('click', function(e) {
        const lang = document.body.classList.contains('rtl') ? 'ar' : 'en';
        if (typeof gtag !== 'undefined') {
            gtag('event', 'cta_click', {
                'event_category': 'engagement',
                'event_label': this.textContent.trim(),
                'language': lang
            });
        }
    });
});

// Smooth scroll
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
            target.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
            });
        }
    });
});
</script>

</body>
</html>
